             <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="txbAge" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Microsoft JhengHei UI Light" FontSize="16"/>
                <Image Source="C:\Users\Mursleen Amjad\Documents\Visual Studio 2015\Projects\PayrollManagementSystem\images\contact.ico" Height="100" Opacity="0.8" HorizontalAlignment="Right"/>
            </StackPanel>
        </TextBlock>
            <TextBlock  Margin="43,586,860,0" TextWrapping="Wrap" Background="#FF16A262" Foreground="White"  VerticalAlignment="Top" Width="220" Height="100" Opacity="0.8">
             <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="txbRetirementDays" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Microsoft JhengHei UI Light" FontSize="16"/>
                <Image Source="C:\Users\Mursleen Amjad\Documents\Visual Studio 2015\Projects\PayrollManagementSystem\images\autoship.ico" Height="100" Opacity="0.8" HorizontalAlignment="Right"/>
            </StackPanel>
        </TextBlock>
            <TextBlock  Margin="280,586,623,0" TextWrapping="Wrap" Background="#FFBD2D1E" Foreground="White"  VerticalAlignment="Top" Width="220" Height="100" Opacity="0.8">
             <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="txbTotalLeave" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Microsoft JhengHei UI Light" FontSize="16"/>
                <Image Source="C:\Users\Mursleen Amjad\Documents\Visual Studio 2015\Projects\PayrollManagementSystem\images\briefcase.ico" Height="100" Opacity="0.8" HorizontalAlignment="Right"/>
            </StackPanel>
        </TextBlock>
            <TextBlock  Margin="280,463,623,0" TextWrapping="Wrap" Background="#FFC3B20C" Foreground="White"  VerticalAlignment="Top" Width="220" Height="100" Opacity="0.8">
             <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="txbTotalLate" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Microsoft JhengHei UI Light" FontSize="16"/>
                <Image Source="C:\Users\Mursleen Amjad\Documents\Visual Studio 2015\Projects\PayrollManagementSystem\images\my-tickets.ico" Height="100" Opacity="0.8" HorizontalAlignment="Right"/>
            </StackPanel>
        </TextBlock>
        </Grid>
        <Button x:Name="btnShowEmployee" HorizontalAlignment="Left" Margin="633,76,0,0" VerticalAlignment="Top" Width="120" Height="45" FontFamily="Bahnschrift Light" FontSize="14" BorderBrush="{x:Null}"  Background="#FFBD2D1E" Click="ShowRow">
            <StackPanel Orientation="Horizontal">
                <Image Source="C:\Users\Mursleen Amjad\Documents\Visual Studio 2015\Projects\PayrollManagementSystem\images\user-23.png" Height="30"/>
                <TextBlock Text=" Show Employ" VerticalAlignment="Center" Margin="0" Foreground="White"/>
            </StackPanel>
        </Button>
        <Button x:Name="btnPrint" HorizontalAlignment="Left" Margin="513,76,0,0" VerticalAlignment="Top" Width="120" Height="45" FontFamily="Bahnschrift Light" FontSize="14" BorderBrush="{x:Null}"  Background="#FF870D44" Click="PrintSlip">
            <StackPanel Orientation="Horizontal">
                <Image Source="C:\Users\Mursleen Amjad\Documents\Visual Studio 2015\Projects\PayrollManagementSystem\images\user-23.png" Height="30"/>
                <TextBlock Text=" Payroll Slip" VerticalAlignment="Center" Margin="0" Foreground="White"/>
            </StackPanel>
        </Button>

    </Grid>
</UserControl>
