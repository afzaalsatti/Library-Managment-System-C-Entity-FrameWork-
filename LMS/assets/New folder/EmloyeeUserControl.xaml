            <TextBlock x:Name="textBlock1_Copy1" HorizontalAlignment="Left" Margin="43,342,0,0" TextWrapping="Wrap" Text="Department Details" VerticalAlignment="Top" Background="White" FontFamily="Motion Picture Personal Use " FontSize="20" Opacity="0.7"/>
            <Label x:Name="lblDepartmentName" Foreground="White"  Content="Name" HorizontalAlignment="Left" Margin="56,415,0,0" VerticalAlignment="Top"/>
